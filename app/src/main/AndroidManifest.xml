<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MyMoneyComposeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMoneyCompose"
        tools:targetApi="31">
        <activity
            android:name=".view.money.activity.MoneyHostActivity"
            android:exported="false"
            android:resizeableActivity="true"
            android:theme="@style/Theme.MyMoneyCompose.Green.NoActionBar"
            tools:targetApi="24" />
        <activity
            android:name=".view.app.offline.activity.OfflineActivity"
            android:exported="false"
            android:resizeableActivity="true"
            android:theme="@style/Theme.MyMoneyCompose.Green.NoActionBar"
            tools:targetApi="24" />
        <activity
            android:name=".view.login.activity.CreateAccountActivity"
            android:exported="false"
            android:resizeableActivity="true"
            android:theme="@style/Theme.MyMoneyCompose.Green.NoActionBar"
            tools:targetApi="24" />
        <activity
            android:name=".view.login.activity.ForgotPasswordActivity"
            android:exported="false"
            android:resizeableActivity="true"
            android:theme="@style/Theme.MyMoneyCompose.Green.NoActionBar"
            tools:targetApi="24" />
        <activity
            android:name=".view.login.activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>