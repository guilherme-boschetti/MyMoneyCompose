<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/red_pressed" android:state_pressed="true" /> <!-- pressed -->
    <item android:color="@color/red_pressed" android:state_focused="true" /> <!-- focused -->
    <item android:color="@color/red_pressed" android:state_selected="true" /> <!-- selected -->
    <item android:color="@color/red_pressed" android:state_activated="true" /> <!-- activated -->
    <item android:color="@color/red_pressed" android:state_checked="true" /> <!-- checked -->
    <item android:color="@color/black_20" android:state_enabled="false" /> <!-- disabled -->
    <item android:color="@color/red" android:state_enabled="true" /> <!-- enabled -->
    <item android:color="@color/red" /> <!-- normal -->
</selector>